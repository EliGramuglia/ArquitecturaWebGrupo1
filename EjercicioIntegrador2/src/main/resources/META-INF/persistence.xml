<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="RegistroEstudiantes">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.example.entity.Estudiante</class>
        <class>org.example.entity.Carrera</class>
        <class>org.example.entity.Inscripcion</class>

        <!-- Configuración JDBC para MySQL (se puede modificar el create) -->
        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/Entregable2?createDatabaseIfNotExist=true" />
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="" />


            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" /> <!-- le indica a Hibernate que estás usando MySQL 8, así genera consultas correctas. -->
            <property name="hibernate.hbm2ddl.auto" value="update" />    <!-- Update: agrega tablas/columnas nuevas sin borrar datos existentes. -->
            <property name="hibernate.show_sql" value="true" />   <!-- Para que las querys se muestren en consola -->
            <property name="hibernate.format_sql" value="true" />  <!-- Para que el formato de las consultas sea mas legible -->
        </properties>
    </persistence-unit>
</persistence>